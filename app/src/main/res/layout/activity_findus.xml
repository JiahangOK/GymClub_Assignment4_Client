<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="0dp"
        android:layout_height="499dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_myRoute"
        app:layout_constraintVertical_bias="0.777" />

    <Button
        android:id="@+id/bt_myRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="My Route"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_changeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="change view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toEndOf="@+id/btn_traffic"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/btn_traffic"
        android:layout_width="91dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Traffic"
        app:layout_constraintStart_toEndOf="@+id/bt_myRoute"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_longti"
        android:layout_width="136dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="longti"
        app:layout_constraintStart_toStartOf="@+id/bt_myRoute"
        app:layout_constraintTop_toBottomOf="@+id/bt_myRoute" />

    <TextView
        android:id="@+id/txt_lati"
        android:layout_width="126dp"
        android:layout_height="24dp"
        android:layout_marginStart="56dp"
        android:text="lati"
        app:layout_constraintStart_toEndOf="@+id/txt_longti"
        app:layout_constraintTop_toTopOf="@+id/txt_longti" />

</android.support.constraint.ConstraintLayout>